<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-4">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">Your Account</h5>
        <p class="card-text"><%= link_to current_user.username, user_path(current_user.username) %></p>
      </div>
    </div>

    </div>
    <div class="col-md-8">
      <ul class="list-group">
        <% @tweets.each do |tweet| %>
          <li class="list-group-item">
            <% link_to tweet, class: "list-group-item list-group-item-action" do %>
              <h5 class="list-group-item-heading"><%= tweet.user %></h5>
              <p class="list-group-item-text"><%= tweet.content %></p>
              <p class="list-group-item-text">
                <%= link_to 'Show', tweet %>
                <% if tweet.user == current_user %>
                  <%= link_to 'Edit', edit_tweet_path(tweet) %>
                  <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
                <% end %>
              </p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <br>

    <% if user_signed_in? %>
      <%= link_to 'New Tweet', new_tweet_path %>
    <% end %>
    </div>
  </div>
</div>